max_step  = 5000
stop_time = 2.0

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic =  0 0 0
geometry.coord_sys   =  0       # 0 => cart
#geometry.prob_lo     =  -10.0  0.0  0.0
#geometry.prob_hi     =  10.0 5.0  0.0
geometry.prob_lo     =  0.0 -10.0  0.0
geometry.prob_hi     =  5.0 10.0  5.0
amr.n_cell           =  4 256 4

# VERBOSITY
amr.v              = 1       # verbosity in Amr

# NO. OF COMPONENTS

amr.ncomp          = 5

# REFINEMENT
amr.max_level       = 2     # maximum level number allowed
amr.ref_ratio       = 2 2 2 2 # refinement ratio
amr.blocking_factor = 4       # block factor in grid generation
amr.max_grid_size   = 64

amr.regrid_int      = 2       # how often to regrid

# PLOTFILES
amr.plot_file  = plt    # root name of plot file
amr.plot_int   = 100     # number of timesteps between plot files

myamr.verbose   = 2
myamr.cfl       = 0.7
myamr.do_reflux = 1

# Tagging
myamr.phierr    = 1.01  1.1  1.5

# CHECKPOINT
amr.chk_file = chk      # root name of checkpoint file
amr.chk_int  = 1000       # number of timesteps between checkpoint files
amr.restart  = chk04000 # restart from this checkpoint file
